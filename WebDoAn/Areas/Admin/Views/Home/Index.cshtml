
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-9">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Biểu đồ thu nhập theo tháng</h5>
                    <div>
                        <a href="javascript:void(0);" class="btn btn-sm btn-default">View All</a>
                    </div>
                </div>
                <div class="mt-3 pb-3" style="height: 400px">
                    @* <canvas class="chart" id="bar-chart"></canvas> *@
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Khách hàng tiềm năng</h5>
                </div>
                <div class="m-t-30">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên khách hàng</th>
                                    <th>Số điện thoại</th>
                                    <th>Tổng tiền đã mua</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var us in ViewBag.ListUserRank)
                                {
                                    <tr>
                                        <td>@us.Name</td>
                                        <td>@us.PhoneNumber</td>
                                        <td>@us.ToTal</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Bảng sản phẩm bán chạy</h5>
                </div>
                <div class="m-t-30">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Ảnh</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pro in ViewBag.ListProductRank)
                                {
                                    <tr>
                                        <td>@pro.Name</td>
                                        <td>
                                            <img src="/images/product/@pro.ImgSrc" style="width: 60px;"/>
                                        </td>
                                        <td>@pro.SoLuong</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@* <script src="~/Adminassets/vendors/chartjs/Chart.min.js"></script> *@
@* <script src="https://cdn.jsdelivr.net/npm/chart.js@3.6.0/dist/chart.min.js"></script> *@
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js/dist/chart.umd.min.js"></script>
<script src="~/Customjs/Admin/Home/index.js"></script>