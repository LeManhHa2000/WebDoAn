@model WebDoAn.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Danh sách loại hàng hóa</a>
            <span class="breadcrumb-item active">Xóa loại hàng</span>
        </nav>
    </div>
</div>
<hr />
<h3>Bạn chắc chắn sẽ xóa ?</h3>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Thông tin chi tiết</h4>
    </div>
    <div class="card-body">
        <div>
            <p><span class="font-weight-bold mr-2">Tên loại hàng:</span><span> @Model.Name</span></p>
        </div>
        <div>
            <p><span class="font-weight-bold mr-2">Ngày tạo:</span><span> @Model.CreateTime.Date.ToShortDateString()</span></p>
        </div>
        <div>
            <p><span class="font-weight-bold mr-2">Mô tả:</span><span> @Model.Description</span></p>
        </div>
        <div>
            <p>
                <span class="font-weight-bold mr-2">Trạng thái:</span>
                @if (Model.Status == true)
                {
                    <span class="badge badge-success">Đang hoạt động</span>
                }
                else
                {
                    <span class="badge badge-danger">Chưa áp dụng</span>
                }

            </p>
        </div>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Trở lại danh sách</a>
        </form>
    </div>
</div>

