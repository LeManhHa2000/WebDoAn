@using static WebDoAn.Enums.OrderEnum
@model IEnumerable<WebDoAn.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Đơn hàng</span>
        </nav>
    </div>
</div>
<hr />

<div class="card">
    <div class="card-header d-flex align-items-center">
        <h4 class="card-title">Danh sách Đơn hàng</h4>
    </div>
    <div class="card-body">
        <div class="block_search">
            <input class="input_search mr-2" id="SearchInput" placeholder="Nhập mã đơn hàng" />
            <select asp-items="Html.GetEnumSelectList<OrderStatus>()" id="SelectStatus">
            </select>
            <button id="Search" class="btn_search ml-2">Tìm kiếm</button>
        </div>
        <div class="table-responsive">
            <table id="data-table" class="table table-category w-100">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            Thời gian tạo
                        </th>
                        <th>
                            Mã đơn hàng
                        </th>
                        <th>
                            Thời gian cập nhật
                        </th>
                        <th>
                            Người đặt hàng
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th class="text-center">#</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/moment/moment.min.js"></script>
<script src="~/lib/moment/locale/vi.js"></script>

<script src="~/Adminassets/vendors/datatables/jquery.dataTables.min.js"></script>
<script src="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.js"></script>
<script src="~/customjs/admin/order/index.js"></script>