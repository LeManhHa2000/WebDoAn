
@{
    Layout = null;
}
@model User

<!doctype html>
<html lang="en">
<head>
	<title>Login</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	@* <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet"> *@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/Loginassests/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			@* <div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Login #07</h2>
				</div>
			</div> *@
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="text-wrap p-4 p-lg-5 text-center d-flex align-items-center order-md-last">
							<div class="text w-100">
								<h2>Xin chào !</h2>
								<p>Bạn chưa có tài khoản ?</p>
								<a href="#" class="btn btn-white btn-outline-white">Đăng kí</a>
							</div>
						</div>
						<div class="login-wrap p-4 p-lg-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Đăng nhập</h3>
								</div>
								@* <div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p>
								</div> *@
							</div>
								<form asp-controller="Access" asp-action="Login" method="post" class="signin-form">
									<div class="form-group mb-3">
										<label class="label" for="name">Tên tài khoản</label>
										<input asp-for="UserName" type="text" class="form-control" placeholder="Username" required>
									</div>
									<div class="form-group mb-3">
										<label class="label" for="password">Mật khẩu</label>
										<input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
									</div>
									<div class="form-group">
										<button type="submit" class="form-control btn btn-primary submit px-3">Đăng nhập</button>
									</div>
									@* <div class="form-group d-md-flex justify-content-end">
										<div class="w-50 text-md-right">
											<a href="#">Quên mật khẩu ?</a>
										</div>
									</div> *@
								</form>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>
	@* <div class="toast" data-autohide="false">
		<div class="toast-header">
			<svg class=" rounded mr-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
				<rect fill="#007aff" width="100%" height="100%" />
			</svg>
			<strong class="mr-auto">Bootstrap</strong>
			<small class="text-muted">11 mins ago</small>
			<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="toast-body">
			Hello, world! This is a toast message.
		</div>
		</div> *@
	@if (ViewBag.MessageErrorLogin != null)
	{
		<div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
			<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
				<div class="toast-header bg-warning">
					<strong class="mr-auto" style="color: #fff;">Thông báo</strong>
					<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="toast-body">
					@ViewBag.MessageErrorLogin
				</div>
			</div>
		</div>
	}
	@if (ViewBag.MessageActiveLogin != null)
	{
		<div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
			<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
				<div class="toast-header bg-warning">
					<strong class="mr-auto" style="color: #fff;">Thông báo</strong>
					<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="toast-body">
					@ViewBag.MessageActiveLogin
				</div>
			</div>
		</div>
	}

	

	<script src="~/Loginassests/js/jquery.min.js"></script>
	<script src="~/Loginassests/js/popper.js"></script>
	<script src="~/Loginassests/js/bootstrap.min.js"></script>
	<script src="~/Loginassests/js/main.js"></script>
	<script>
		$('.toast').toast('show');
	</script>

</body>
</html>


