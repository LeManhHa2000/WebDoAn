
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using static WebDoAn.Enums.UserEnum
@model User

<style>
    .nice-select {
        display: none;
    }

    #inputState {
        display: block !important
    }
</style>

<section class="breadcrumb-section set-bg mt-2" style="background-color: #333;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thông tin Người dùng</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Thông tin người dùng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Thông tin người dùng</h2>
                </div>
            </div>
        </div>
        <form asp-controller="UserDashboard" asp-action="Index" method="post" id="FormAccess">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputEmail4">Họ và tên</label>
                    <input asp-for="FullName" type="text" class="form-control" id="inputEmail4" placeholder="Nhập họ và tên ..." readonly>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputAddress">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="inputAddress" placeholder="Nhập Email ..." required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputAddress">Số điện thoại</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" max="10" id="PhoneNumber" placeholder="Nhấp số điện thoại ..." readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Địa chỉ</label>
                    <input asp-for="Address" type="text" class="form-control" id="inputPassword4" placeholder="Nhập địa chỉ ..." required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Giới tính</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderEnum>()" id="inputState" class="form-control" style="display: block !important;" required>
                        <option selected disabled>Chọn</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
</div>
<script>
    document.getElementById("PhoneNumber").addEventListener("input", function () {
        var valueChange = funcChanePhoneNumber();
        $("#FormAccess").find('input[name=PhoneNumber]').val(valueChange);
    });
    function funcChanePhoneNumber() {
        var valueChange = $("#FormAccess").find('input[name=PhoneNumber]').val().replace(/[^0-9]/g, '');
        return valueChange;
    }
</script>

