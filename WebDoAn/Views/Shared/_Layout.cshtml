                                </ul>
                            </div> *@
                            <div class="header__top__right__auth border-right pr-2">
                                <a asp-controller="Access" asp-action="Login"><i class="fa fa-user"></i> Đăng nhập/ Đăng kí</a>
                            </div>
                           @*  <div class="header__top__right__auth ml-2">
                                <a asp-controller="Access" asp-action="Logout"><i class="fa fa-sign-out"></i> Đăng xuất</a>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" style="border-bottom: 1px solid #333;">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="./index.html"><img src="~Assets/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a asp-controller="ProductView" asp-action="Index" asp-route-id="0" asp-route-name="">Sản phẩm</a></li>
                            <li><a asp-controller="BlogView" asp-action="Index">Tin tức</a></li>
                            <li><a asp-controller="Contact" asp-action="Index">Liên hệ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li>Giỏ hàng</li>
                            <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    @RenderBody()
    <!-- Footer Section Begin -->
