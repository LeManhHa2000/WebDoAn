<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm mới nhất<span>@contxt.HttpContext.Session.GetInt32("UserId")</span></h2>
                </div>
                <div class="featured__controls">
                    @* <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".oranges">Oranges</li>
                        <li data-filter=".fresh-meat">Fresh Meat</li>
                        <li data-filter=".vegetables">Vegetables</li>
                        <li data-filter=".fastfood">Fastfood</li>
                    </ul> *@
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in ViewBag.ProductInHome)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/images/product/@item.Image">
                            <ul class="featured__item__pic__hover">
                                <li><a asp-controller="ProductView" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="ProductView" asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h6>
                            <h5>@item.Price VND</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Featured Section End -->
