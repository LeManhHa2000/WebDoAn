<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>Tin tức</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var blog in ViewBag.BlogInHome)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="/images/blog/@blog.ImgSrc" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@blog.CreateTime.Date.ToShortDateString()</li>
                            </ul>
                            <h5><a asp-controller="BlogView" asp-action="Details" asp-route-id="@blog.Id">@blog.Title</a></h5>
                            <p>@blog.SubDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->
