
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.css" rel="stylesheet">
<style>
    .badge {
        display: inline-block;
        padding: 0.25em 0.4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
        color: #fff;
    }
</style>

<!-- Blog Details Hero Begin -->
<section class="breadcrumb-section set-bg mt-2" style="background-color: #333;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đơn hàng của tôi</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                        <span>Đơn hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="spad">
    <div class="container">
        <div class="row">
            <input hidden type="text" value="@ViewBag.UserId" id="UserId" />
            <div class="col-lg-12">
                <table id="OrderView" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th class="text-center">STT</th>
                            <th class="text-center">Ngày tạo</th>
                            <th class="text-center">Mã đơn hàng</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">#</th>
                        </tr>
                    </thead>
                    <tbody>
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script src="~/Assets/js/jquery-3.3.1.min.js"></script>
<script src="~/lib/moment/moment.min.js"></script>
<script src="~/lib/moment/locale/vi.js"></script>

<script src="~/Adminassets/vendors/datatables/jquery.dataTables.min.js"></script>
<script src="~/Adminassets/vendors/datatables/dataTables.bootstrap.min.js"></script>
<script src="~/customjs/client/Order/userViewOrder.js"></script>
